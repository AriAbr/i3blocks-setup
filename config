[LANGUAGE]
label=⌨
command=~/.config/i3blocks/language/language.sh
# Set interval to once, and refresh manually on laguage toggle
interval=once
signal=10

[BRIGHTNESS]
label=🔆
command=echo $(light | cut -d. -f1)%
interval=once
signal=1
color=#a8c3ed
separator_block_width=10
markup=pango

[VOLUME]
label=🔈
command=~/.config/i3-volume/volume output i3blocks
interval=repeat
signal=2
color=#a8c3ed
separator_block_width=10
markup=pango

[BATTERY]
command=~/.config/i3blocks/battery/battery.py
markup=pango
interval=1
color=#a8c3ed

[DATE]
command=~/.config/i3blocks/date/date.sh
interval=1
color=#a8c3ed

[TIME]
command=~/.config/i3blocks/time/time.sh
interval=1
color=#a8c3ed
